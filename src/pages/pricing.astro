---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Pricing from "@components/pricing.astro";

const pricing = [
  {
    name: "Starter",
    price: "Free",
    popular: false,
    features: [
      "Dashboard overview",
      "1 AI connector (OpenAI)",
      "Basic persona settings",
      "Manual reply assist",
      "Usage analytics",
      "Community support",
    ],
    button: {
      text: "Get Started",
      link: "https://chromewebstore.google.com/detail/agent-for-whatsapp/kjeodciaphncjcogidpafdeeckmpdcpn",
    },
  },
  {
    name: "Pro",
    price: {
      monthly: "$19",
    },
    popular: true,
    features: [
      "Everything in Starter, and",
      "All AI connectors (OpenRouter, Groq, Local)",
      "Advanced persona & tone control",
      "Auto-reply & trigger rules",
      "Toolbox: lead management",
      "Message workflows",
      "Priority support",
    ],
    button: {
      text: "Get Started",
      link: "https://aoq.lemonsqueezy.com/checkout/buy/fda94447-55c8-47cb-aa7c-455f89079b2d",
    },
  },
  {
    name: "Max",
    price: {
      monthly: "$29",
    },
    popular: false,
    features: [
      "Everything in Pro, and",
      "Unlimited automation rules",
      "Team-level controls & safety",
      "Advanced usage analytics",
      "Custom proxy server",
      "Dedicated support",
    ],
    button: {
      text: "Get Started",
      link: "https://aoq.lemonsqueezy.com/checkout/buy/49a4f2a6-9f62-4240-a3e6-d09f3fc70aaf",
    },
  },
];
---

<Layout
  title="Pricing"
  description="Simple, transparent pricing for Agent for WhatsApp. Start free and scale as you grow."
>
  <Container>
    <Sectionhead>
      <Fragment slot="title">Simple, Transparent Pricing</Fragment>
      <Fragment slot="desc">Start free. Upgrade when you need more power.</Fragment>
    </Sectionhead>

    <div
      class="grid md:grid-cols-3 gap-6 mx-auto max-w-screen-lg mt-16 pt-4 items-start">
      {pricing.map((item) => <Pricing plan={item} />)}
    </div>
  </Container>
</Layout>
