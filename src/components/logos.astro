---
import { Icon } from "astro-icon";

const channels = [
  {
    href: "https://chat.whatsapp.com/EfstaVv9xWt5DbMLTJushi",
    icon: "simple-icons:whatsapp",
    color: "text-green-500",
    label: "WhatsApp Group",
  },
  {
    href: "https://t.me/chatgpt4telegram",
    icon: "simple-icons:telegram",
    color: "text-sky-500",
    label: "Telegram",
  },
  {
    href: "https://twitter.com/ottimogo",
    icon: "simple-icons:twitter",
    color: "text-sky-500",
    label: "X",
  },
  {
    href: "https://line.me/ti/g/mq5i0jpULd",
    icon: "simple-icons:line",
    color: "text-green-600",
    label: "LINE",
  },
];
---

<section class="mt-20 mb-8 rounded-3xl border border-[var(--line-soft)] bg-white p-6 sm:p-8 shadow-sm">
  <div class="grid md:grid-cols-2 gap-8 items-center">
    <div>
      <p class="text-xs uppercase tracking-[0.18em] text-pink-600 font-semibold">Community</p>
      <h3 class="mt-3 text-3xl font-bold tracking-tight text-gray-900">Get Help and Share Playbooks</h3>
      <p class="mt-3 text-gray-600">Join our communities to exchange prompts, fix edge cases, and learn growth workflows.</p>
      <div class="mt-5 flex flex-wrap gap-3 text-sm text-gray-700">
        <span class="rounded-full border border-[var(--line-soft)] px-3 py-1">Prompt examples</span>
        <span class="rounded-full border border-[var(--line-soft)] px-3 py-1">Troubleshooting help</span>
        <span class="rounded-full border border-[var(--line-soft)] px-3 py-1">Release updates</span>
      </div>
    </div>

    <div class="grid grid-cols-2 sm:grid-cols-4 gap-3">
      {
        channels.map((item) => (
          <a
            href={item.href}
            target="_blank"
            rel="noopener noreferrer"
            class="rounded-2xl border border-[var(--line-soft)] p-4 text-center bg-gray-50 hover:bg-white hover:shadow-sm transition"
          >
            <Icon class={`h-8 w-8 mx-auto ${item.color}`} name={item.icon} />
            <p class="text-xs text-gray-600 mt-2">{item.label}</p>
          </a>
        ))
      }
    </div>
  </div>
</section>
