---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
const pathname = Astro.url.pathname;

const menuitems = [
  {
    title: "Product",
    path: "#",
    children: [
      { title: "WhatsApp", path: "https://chrome.google.com/webstore/detail/chatgpt-for-whatsapp/ajlcjjeepijhfbgkciegfdoklpcpmipk" },
      { title: "Wechat", path: "https://aow.me" },
    ],
  },
  {
    title: "Pricing",
    path: "/pricing",
  },
  // {
  //   title: "About",
  //   path: "/about",
  // },
  {
    title: "Blog",
    path: "/blog",
  },
  {
    title: "Tools",
    path: "/tools/whatsapp-reply-generator",
  },
  {
    title: "Docs",
    path: "https://docs.aoq.me",
  },
  {
    title: "Contact",
    path: "/contact",
  },
];
---

<Container>
  <header class="sticky top-3 z-50 rounded-2xl border border-pink-200/70 bg-gradient-to-r from-white via-[var(--brand-50)] to-green-50/70 backdrop-blur supports-[backdrop-filter]:bg-white/80 px-4 py-3 flex flex-col lg:flex-row justify-between items-center my-5 shadow-sm shadow-pink-100/70">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg"
          ><span class="text-gray-900">ChatGPT for </span><span
            class="font-bold text-pink-500">
            WhatsApp</span
          >
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0 lg:items-center lg:gap-2">
        <ul class="flex flex-col lg:flex-row lg:gap-1">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class:list={[
                        "flex lg:px-3 py-2 rounded-lg font-medium transition",
                        pathname === item.path
                          ? "text-pink-700 bg-pink-100"
                          : "text-gray-800 hover:text-pink-600 hover:bg-pink-50",
                      ]}>
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <Link
          href="/pricing"
          data-cta="nav_get_started"
          data-location="navbar"
          class="mt-2 lg:mt-0 bg-gradient-to-r from-pink-600 to-pink-500 text-white hover:from-pink-700 hover:to-pink-600 rounded-xl font-semibold px-4 py-2"
        >
          Get Started
        </Link>
      </MenuItems>
    </Astronav>
  </header>
</Container>
