---
import { Icon } from "astro-icon";

const features = [
  {
    title: "Dashboard",
    description:
      "Track connection status, bot behavior, account details, plan, and usage analytics in one clean dashboard.",
    icon: "mdi:view-dashboard",
  },
  {
    title: "AI Connector",
    description:
      "Switch between OpenAI, OpenRouter, Groq, or local models anytime to balance quality, speed, and cost.",
    icon: "mdi:connection",
  },
  {
    title: "Persona",
    description:
      "Define tone, style, and boundaries so every reply feels on-brand, natural, and aligned with your workflow.",
    icon: "mdi:account-voice",
  },
  {
    title: "Toolbox",
    description:
      "Use built-in tools for lead handling, message operations, and everyday growth tasks without leaving WhatsApp.",
    icon: "mdi:toolbox",
  },
  {
    title: "Automation",
    description:
      "Auto-reply, apply trigger rules, and keep conversations moving even when you're busy.",
    icon: "mdi:robot",
  },
  {
    title: "Team & Safety",
    description:
      "Use clear controls, usage limits, and account-level settings to keep automation predictable and safe.",
    icon: "mdi:shield-check",
  },
];
---

<section class="mt-20">
  <div class="text-center max-w-3xl mx-auto">
    <p class="text-xs uppercase tracking-[0.18em] text-pink-600 font-semibold">Features</p>
    <h2 class="mt-3 text-3xl lg:text-4xl font-bold tracking-tight text-gray-900">Everything You Need to Scale WhatsApp Communication</h2>
    <p class="mt-4 text-gray-600">Connect your preferred AI, customize persona, automate workflows, and manage leads â€” all from one extension.</p>
  </div>

  <div class="grid sm:grid-cols-2 lg:grid-cols-3 mt-10 gap-4">
    {
      features.map((item) => (
        <div class="rounded-2xl border border-[var(--line-soft)] bg-white p-6 shadow-sm hover:shadow-md transition">
          <div class="w-11 h-11 rounded-xl bg-[var(--brand-50)] border border-[var(--line-soft)] flex items-center justify-center">
            <Icon class="text-pink-600 w-6 h-6" name={item.icon} />
          </div>
          <h3 class="font-semibold text-lg text-gray-900 mt-4">{item.title}</h3>
          <p class="mt-2 leading-relaxed text-gray-600">{item.description}</p>
        </div>
      ))
    }
  </div>
</section>
