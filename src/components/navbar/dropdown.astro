---
import { Dropdown, DropdownItems } from "astro-navbar";
const { title, lastItem, children } = Astro.props;
const pathname = Astro.url.pathname;
---

<li class="relative">
  <Dropdown class="group">
    <button
      class="flex items-center gap-1 w-full lg:w-auto lg:px-3 py-2 rounded-lg text-gray-800 hover:text-pink-600 hover:bg-pink-50 transition font-medium">
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          "lg:absolute w-full lg:w-48 z-10",
          lastItem
            ? "lg:right-0 origin-top-right"
            : "lg:left-0 origin-top-left",
        ]}>
        <div
          class="px-3 lg:py-2 lg:bg-white lg:rounded-md lg:shadow lg:border flex flex-col">
          {
            children.map((item) => (
              <a
                href={item.path}
                class:list={[
                  "py-1.5 px-2 rounded-md text-sm transition",
                  pathname === item.path
                    ? "text-pink-700 bg-pink-100"
                    : "text-gray-700 hover:text-pink-600 hover:bg-pink-50",
                ]}>
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </Dropdown>
</li>
