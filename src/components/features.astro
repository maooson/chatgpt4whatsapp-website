---
import { Icon } from "astro-icon";

const features = [
  {
    title: "Instant Reply Drafting",
    description:
      "Generate first-draft responses directly in WhatsApp Web, then edit before sending.",
    icon: "mdi:chat-processing",
  },
  {
    title: "Tone and Style Control",
    description:
      "Switch between professional, friendly, concise, or persuasive response styles in one click.",
    icon: "mdi:tune-variant",
  },
  {
    title: "Troubleshooting Built In",
    description:
      "Recover fast from common auth and rate-limit errors with guided fixes and playbooks.",
    icon: "mdi:shield-check",
  },
  {
    title: "Prompt Preset System",
    description:
      "Save reusable prompt templates so your team keeps consistent communication quality.",
    icon: "mdi:bookmark-multiple",
  },
  {
    title: "Workflow Ready",
    description:
      "Works for support, sales, follow-up, and operations workflows without custom code.",
    icon: "mdi:source-branch",
  },
  {
    title: "Conversion Tracking",
    description:
      "Track CTA and tool interactions to improve landing-page performance with real data.",
    icon: "mdi:chart-line",
  },
];
---

<section class="mt-20">
  <div class="text-center max-w-3xl mx-auto">
    <p class="text-xs uppercase tracking-[0.18em] text-pink-600 font-semibold">Solution</p>
    <h2 class="mt-3 text-3xl lg:text-4xl font-bold tracking-tight text-gray-900">Everything You Need for AI-Assisted WhatsApp Messaging</h2>
    <p class="mt-4 text-gray-600">Designed for users who want faster replies and teams who need repeatable quality.</p>
  </div>

  <div class="grid sm:grid-cols-2 lg:grid-cols-3 mt-10 gap-4">
    {
      features.map((item) => (
        <div class="rounded-2xl border border-[var(--line-soft)] bg-white p-6 shadow-sm hover:shadow-md transition">
          <div class="w-11 h-11 rounded-xl bg-[var(--brand-50)] border border-[var(--line-soft)] flex items-center justify-center">
            <Icon class="text-pink-600 w-6 h-6" name={item.icon} />
          </div>
          <h3 class="font-semibold text-lg text-gray-900 mt-4">{item.title}</h3>
          <p class="mt-2 leading-relaxed text-gray-600">{item.description}</p>
        </div>
      ))
    }
  </div>
</section>
